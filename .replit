modules = ["nodejs-20", "web"]

[nix]
channel = "stable-25_05"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "start"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Hardhat Network"

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "VITE_HARDHAT_LOANCHAIN_ADDRESS=0x5FbDB2315678afecb367f032d93F642f64180aa3 VITE_HARDHAT_RPC_URL=http://localhost:8545 npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && NODE_ENV=development PORT=3001 FRONTEND_URL=http://localhost:5000 npm start"
waitForPort = 3001

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Hardhat Network"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx hardhat node --port 8000 --hostname 0.0.0.0"
waitForPort = 8000

[agent]
expertMode = true

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 8545
externalPort = 80

[[ports]]
localPort = 35235
externalPort = 3003

[[ports]]
localPort = 39493
externalPort = 4200

[[ports]]
localPort = 40691
externalPort = 3000

[[ports]]
localPort = 44741
externalPort = 3002

[[ports]]
localPort = 8000
externalPort = 8000
